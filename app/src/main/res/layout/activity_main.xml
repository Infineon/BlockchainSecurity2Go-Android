<?xml version="1.0" encoding="utf-8"?>

<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".MainActivity"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <android.support.v7.widget.Toolbar
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:id="@+id/toolbar" android:background="@color/colorPrimary"
        app:titleTextColor="@android:color/white" app:navigationIcon="@drawable/co_logo_white"/>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        >


        <!-- Main layout -->
        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:layout_margin="5dp">


            <!-- Spinner for Key selection -->
            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="end"
                android:gravity="top"
                android:paddingBottom="20dp">
                <TextView
                    android:text="@string/label_key_index"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" android:id="@+id/textView3" android:layout_weight="1"
                    android:textSize="15sp"/>
                <Spinner
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" android:id="@+id/keyIndexSpinner"
                    android:entries="@array/key_index" android:layout_weight="1"/>
            </LinearLayout>

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:srcCompat="@drawable/coinfinity_logo"
                android:adjustViewBounds="false" android:cropToPadding="false"
                android:contentDescription="@string/logo"
                />
            <TextView
                android:id="@+id/holdCard"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/hold_card"
                android:textStyle="bold"
                android:textSize="20sp"
                android:gravity="center_horizontal"
                />
            <ImageView
                android:layout_width="match_parent"
                android:layout_height="180dp" app:srcCompat="@drawable/ic_launcher_foreground"
                android:id="@+id/qrCode" android:contentDescription="@string/qr_code"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/ethAddress"
                android:textIsSelectable="true" android:textAlignment="center"
                android:textSize="16sp"/>
            <TextView
                android:id="@+id/balance"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textStyle="bold"
                android:textSize="20sp"
                android:textIsSelectable="true" android:textAlignment="center"/>
            <ImageView
                android:id="@+id/image_nfc_icon"
                android:layout_width="117dp"
                android:layout_height="68dp" app:srcCompat="@drawable/nfc_logo"
                android:contentDescription="TODO" />
            <ProgressBar
                style="?android:attr/progressBarStyle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/progressBar"
                />
            <!-- row with 3 buttons -->
            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="62dp"
                android:layout_marginTop="30dp"
                >

                <Button
                    android:id="@+id/brandProtection"
                    android:layout_width="108dp"
                    android:layout_height="match_parent"
                    android:enabled="false"
                    android:textSize="12sp"
                    android:onClick="onBrandProtection"
                    android:text="@string/brand_protection"
                    android:visibility="visible" />

                <Button
                    android:id="@+id/send"
                    android:layout_width="39dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:enabled="false"
                    android:onClick="onSend"
                    android:text="@string/send_eth"
                    android:textSize="14sp"
                    android:visibility="visible"
                    tools:ignore="ButtonStyle" />

                <Button
                    android:id="@+id/sendErc20"
                    android:layout_width="45dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:enabled="false"
                    android:onClick="onSendErc20"
                    android:text="@string/send_erc20"
                    android:textSize="14sp"
                    android:visibility="visible" />

                <Button
                    android:id="@+id/voting"
                    android:layout_width="44dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:enabled="false"
                    android:onClick="onVoting"
                    android:text="@string/voting"
                    android:textSize="14sp"
                    android:visibility="visible"
                    tools:ignore="ButtonStyle" />

            </LinearLayout>
        </LinearLayout>
    </ScrollView>
</LinearLayout>
