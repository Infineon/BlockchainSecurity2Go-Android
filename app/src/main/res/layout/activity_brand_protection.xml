<?xml version="1.0" encoding="utf-8"?>
<LinearLayout  xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".BrandProtection"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <android.support.v7.widget.Toolbar
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:id="@+id/toolbar" android:background="@color/colorPrimary"
        app:titleTextColor="@android:color/white" app:navigationIcon="@drawable/co_logo_white"/>


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <Button
            android:id="@+id/productDetails"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_marginStart="130dp"
            android:layout_marginTop="200dp"
            android:onClick="onAddDetails"
            android:text="@string/product_details"
            android:visibility="visible" />

        <Button
            android:id="@+id/verifyProduct"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="135dp"
            android:layout_below="@id/productDetails"
            android:layout_marginTop="20dp"
            android:onClick="onVerifyProduct"
            android:text="@string/verify_product"
            android:layout_centerHorizontal="true"
            android:visibility="visible" />
    </RelativeLayout>




</LinearLayout>