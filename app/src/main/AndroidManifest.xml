<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="co.coinfinity.infineonandroidapp">

    <uses-permission android:name="android.permission.NFC" />
    <uses-permission android:name="android.permission.INTERNET" />

    <uses-feature
        android:name="android.hardware.nfc"
        android:required="true" />

    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.READ_PHONE_STATE" />
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme.NoActionBar">
        <activity android:name=".BrandProtection_VerifyProduct"></activity>
        <activity android:name=".BrandProtection_AddDetails" />
        <activity android:name=".BrandProtection" />
        <activity
            android:name=".MainActivity"
            android:screenOrientation="fullSensor">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".SendTransactionActivity"
            android:label="@string/title_activity_send_transaction"
            android:screenOrientation="fullSensor"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".SendErc20TokensActivity"
            android:label="@string/title_activity_send_erc20_tokens"
            android:screenOrientation="fullSensor"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".VotingActivity"
            android:label="@string/title_activity_voting"
            android:screenOrientation="fullSensor"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".VotingActivityOld"
            android:label="@string/title_activity_voting"
            android:screenOrientation="fullSensor"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".AboutActivity"
            android:label="@string/title_activity_voting"
            android:screenOrientation="fullSensor"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".ChangePinActivity"
            android:label="Change PIN"
            android:screenOrientation="fullSensor"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".SetPinActivity"
            android:screenOrientation="fullSensor" />
        <activity
            android:name=".UnlockPinActivity"
            android:screenOrientation="fullSensor" />
        <activity
            android:name=".GenerateFromSeedActivity"
            android:screenOrientation="fullSensor" />
        <activity
            android:name=".CheckSigCountersActivity"
            android:screenOrientation="fullSensor" />
    </application>

</manifest>